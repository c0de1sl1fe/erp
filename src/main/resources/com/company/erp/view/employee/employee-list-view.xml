<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://employeeListView.title"
      focusComponent="employeesDataGrid">
    <data>
        <collection id="employeesDc"
                    class="com.company.erp.entity.Employee">
            <fetchPlan extends="_base">
                <property name="user" fetchPlan="_base"/>
                <property name="department" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="employeesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Employee e]]>
                </query>
            </loader>
        </collection>
        <instance id="employeeDc"
                  class="com.company.erp.entity.Employee">
            <fetchPlan extends="_base">
                <property name="user" fetchPlan="_base"/>
                <property name="department" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="employeeDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout id="layoutWrapper" classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <genericFilter id="genericFilter"
                               dataLoader="employeesDl">
                    <properties include=".*"/>
                </genericFilter>
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <startSlot>
                        <button id="createButton" action="employeesDataGrid.createAction"/>
                        <button id="editButton" action="employeesDataGrid.editAction"/>
                        <button id="removeButton" action="employeesDataGrid.removeAction"/>
                    </startSlot>
                    <endSlot>
                        <simplePagination id="pagination" dataLoader="employeesDl"/>
                    </endSlot>
                </hbox>
                <dataGrid id="employeesDataGrid"
                          width="100%"
                          minHeight="20em"
                          dataContainer="employeesDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="createAction" type="list_create"/>
                        <action id="editAction" type="list_edit"/>
                        <action id="removeAction" type="list_remove"/>
                    </actions>
                    <columns resizable="true">
                        <column property="user"/>
                        <column property="department"/>
                        <column property="position"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectButton" action="selectAction"/>
                    <button id="discardButton" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="employeeDc">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="40em" columns="2"/>
                    </responsiveSteps>
                    <entityPicker id="userField" property="user">
                        <actions>
                            <action id="entityLookupAction" type="entity_lookup"/>
                            <action id="entityClearAction" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <entityPicker id="deparmentField" property="department">
                        <actions>
                            <action id="entityLookupAction" type="entity_lookup"/>
                            <action id="entityClearAction" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <textField id="positionField" property="position"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveButton" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelButton" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
