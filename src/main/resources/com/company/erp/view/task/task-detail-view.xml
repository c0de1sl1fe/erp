<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://taskDetailView.title"
      focusComponent="form">
    <data>
        <instance id="taskDc"
                  class="com.company.erp.entity.Task">
            <fetchPlan extends="_base">
                <property name="project" fetchPlan="_base"/>
                <property name="roleResponsible" fetchPlan="_base"/>
                <property name="blocks" fetchPlan="_base"/>
                <property name="attribute" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="taskDl"/>
            <collection id="attributeDc" property="attribute"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="taskDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <entityPicker id="projectField" property="project">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <entityPicker id="roleResponsibleField" property="roleResponsible">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <datePicker id="plannedStartField" property="plannedStart"/>
            <datePicker id="plannedEndField" property="plannedEnd"/>
            <datePicker id="actualEndDateField" property="actualEndDate"/>
            <textField id="plannedBudgetField" property="plannedBudget"/>
            <textField id="actualBudgetField" property="actualBudget"/>
        </formLayout>
        <h4 text="msg://com.company.erp.entity/Task.attribute"/>
        <hbox id="attributeButtonsPanel" classNames="buttons-panel">
            <button action="attributeDataGrid.addAction"/>
            <button action="attributeDataGrid.excludeAction"/>
        </hbox>
        <dataGrid id="attributeDataGrid" dataContainer="attributeDc" width="100%" minHeight="20em">
            <actions>
                <action id="addAction" type="list_add"/>
                <action id="excludeAction" type="list_exclude"/>
            </actions>
            <columns>
                <column property="name"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
